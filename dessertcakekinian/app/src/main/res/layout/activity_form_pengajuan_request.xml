<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:windowBackground">

    <LinearLayout
    android:id="@+id/headerLayout"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:elevation="4dp"
    android:paddingHorizontal="16dp"

    android:background="?android:attr/colorBackground"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="?attr/android:textColor"
        android:contentDescription="Kembali" />

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Buat Permintaan Stok Baru"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="?attr/android:textColor"
        android:layout_marginStart="-40dp" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:padding="16dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKirimPermintaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim Permintaan"
            android:paddingVertical="14dp"
            android:textSize="16sp"
            app:cornerRadius="12dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/android:windowBackground"

        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi Peminta"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Peminta"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvNamaPeminta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Aulia Putri"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="@drawable/bg_edittext_stroke"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toko Penerima"
                android:textSize="12sp"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tvTokoPenerima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toko Kue Bahagia - Cabang Pusat"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:background="@drawable/bg_edittext_stroke" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Permintaan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginTop="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Permintaan"
                android:textSize="12sp"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tvTanggalPermintaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24 Agustus 2024"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:background="@drawable/bg_edittext_stroke"
                app:drawableEndCompat="@drawable/ic_kalender"
                app:drawableTint="?android:attr/textColorHint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produk yang Diminta"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginTop="24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProdukDiminta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_produk_pengajuan"
                tools:itemCount="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan Tambahan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginTop="24dp"/>

            <EditText
                android:id="@+id/etCatatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:gravity="top"
                android:textSize="16sp"
                android:hint="Contoh: Butuh mendesak untuk pesanan kue pernikahan."
                android:background="@drawable/bg_edittext_stroke"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:inputType="textMultiLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>