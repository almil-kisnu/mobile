<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".fragment.confirmOtpFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Kode Verifikasi"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Masukkan 6 digit kode yang dikirimkan ke E-mail Anda."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription">

        <EditText
            android:id="@+id/etOtp1"
            style="@style/OtpEditText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/etOtp2"
            style="@style/OtpEditText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/etOtp3"
            style="@style/OtpEditText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/etOtp4"
            style="@style/OtpEditText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/etOtp5"
            style="@style/OtpEditText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/etOtp6"
            style="@style/OtpEditText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resendContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otpContainer">

        <TextView
            android:id="@+id/tvNoCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak menerima kode? "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kirim Ulang"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="204dp"
        android:padding="12dp"
        android:text="Verifikasi"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>