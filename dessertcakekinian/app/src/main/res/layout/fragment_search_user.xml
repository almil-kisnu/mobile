<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    android:background="?attr/colorPrimaryVariant"
    tools:context=".BottomSheet.SearchUserFragment">
    <View
        android:id="@+id/handleBar"
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="PILIH FILTER"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/handleBar" />

    <View
        android:id="@+id/dividerUnderTitle"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnRestart"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <Button
        android:id="@+id/btnRestart"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="RESTART"
        app:strokeColor="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle" />

    <LinearLayout
        android:id="@+id/checkboxContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <TextView
            android:id="@+id/tv_outlet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Pilih Toko/Outlet"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/spinner_outlet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext_background"
            android:overlapAnchor="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/cbAktif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aktif"
            android:textColor="?attr/colorSecondaryVariant"
            android:buttonTint="?attr/colorPrimary"
            android:paddingVertical="10dp"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbNonAktif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non-Aktif"
            android:textColor="?attr/colorSecondaryVariant"
            android:buttonTint="?attr/colorPrimary"
            android:paddingVertical="10dp"
            android:textSize="16sp" />


        <CheckBox
            android:id="@+id/cbOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="owner"
            android:textColor="?attr/colorSecondaryVariant"
            android:buttonTint="?attr/colorPrimary"
            android:paddingVertical="10dp"
            android:textSize="16sp"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/cbAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="?attr/colorSecondaryVariant"
            android:buttonTint="?attr/colorPrimary"
            android:paddingVertical="10dp"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbKaryawan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="karyawan"
            android:textColor="?attr/colorSecondaryVariant"
            android:buttonTint="?attr/colorPrimary"
            android:paddingVertical="10dp"
            android:textSize="16sp" />



    </LinearLayout>

    <Button
        android:id="@+id/btnTerapin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:text="TERAPIN"
        android:paddingVertical="12dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkboxContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>