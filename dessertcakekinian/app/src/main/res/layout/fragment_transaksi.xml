<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".fragment.transaksiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/headerLayoutTransaksi"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:elevation="4dp"
            android:paddingHorizontal="16dp"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/btnBackTransaksi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/black"
                android:contentDescription="Kembali" />
            <TextView
                android:id="@+id/tvJudulTransaksi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Transaksi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="-40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp">

            <EditText
                android:id="@+id/searchEditText" android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_search"
                android:hint="Cari Kategori/Nama/Sku/Barcode"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:drawableStart="@drawable/ic_searchbar"
                android:drawablePadding="8dp"
                android:textColorHint="#999999"
                android:textSize="14sp"
                android:elevation="2dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_filter_transaksi"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorPrimaryVariant">

                <ImageButton
                    android:id="@+id/filterIcon" android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_filter_off"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="4dp"
            android:layout_marginTop="-4dp">

            <LinearLayout
                android:id="@+id/tabProduk" android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/produkIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_box"
                    app:tint="?attr/colorPrimary"
                    android:contentDescription="Tab Produk" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:id="@+id/indicatorProduk"
                    android:background="?attr/colorPrimary"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="bottom"
                    android:visibility="visible" /> </LinearLayout>

            <LinearLayout
                android:id="@+id/tabScan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/scanIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_scan_barcode"
                    app:tint="?attr/colorPrimary"
                    android:contentDescription="Tab Scan" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:id="@+id/indicatorScan"
                    android:background="?attr/colorPrimary"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" /> </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="100dp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/scanContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp"
            android:visibility="gone">

            <com.journeyapps.barcodescanner.DecoratedBarcodeView
                android:id="@+id/scanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:zxing_scanner_layout="@layout/barcode_scanner" />
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/permanentBottomComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorPrimaryVariant"
        android:elevation="8dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:id="@+id/handleIndicator"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="#E0E0E0"
            android:backgroundTint="#BDBDBD" />

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp38.000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="?attr/colorPrimary">

                    <TextView
                        android:id="@+id/btnBeli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beli (5)"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingStart="32dp"
                        android:paddingEnd="32dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:clickable="true"
                        android:focusable="true" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvKosongkanKeranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:text="Kosongkan Keranjang"
            android:textColor="?attr/colorPrimary"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="true"
            tools:listitem="@android:layout/simple_list_item_1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>