<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="?attr/android:windowBackground"
    tools:context=".fragment.FormResponStokFragment"> <LinearLayout
    android:id="@+id/headerLayout"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:elevation="4dp"
    android:paddingHorizontal="16dp"

    android:background="?android:attr/colorBackground"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="?attr/android:textColor"
        android:contentDescription="Kembali" />

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Detail Permintaan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="?attr/android:textColor"
        android:layout_marginStart="-40dp" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:padding="16dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKirimRespon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim Respon"
            android:paddingVertical="14dp"
            android:textSize="16sp"
            app:cornerRadius="12dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/android:windowBackground"

        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvNomorStok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#STOK-123"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Status: Menunggu"
                android:textColor="?attr/colorError"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi Utama"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginTop="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peminta"
                android:textSize="12sp"
                android:layout_marginTop="12dp" />
            <TextView
                android:id="@+id/tvPeminta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toko Kue Bahagia - Pusat"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:background="@drawable/bg_edittext_stroke"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengirim"
                android:textSize="12sp"
                android:layout_marginTop="12dp" />
            <TextView
                android:id="@+id/tvPengirim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gudang Utama"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:background="@drawable/bg_edittext_stroke"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Produk Diterima"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginTop="24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProdukRespon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_produk_respon"
                tools:itemCount="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Tambahan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginTop="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan"
                android:textSize="12sp"
                android:layout_marginTop="12dp" />
            <TextView
                android:id="@+id/tvCatatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stok cokelat bubuk habis, mohon konfirmasi kembali."
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:background="@drawable/bg_edittext_stroke"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>