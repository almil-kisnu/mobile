<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:elevation="2dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E690A5"
        android:padding="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_siklus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Karyawan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tv_pengguna"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="alam_developer"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:gravity="end" />
    </LinearLayout>

    <!-- Tabel Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F8F8F8"
        android:padding="8dp"
        android:weightSum="7">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SENIN"
            android:textSize="10sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SELASA"
            android:textSize="10sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RABU"
            android:textSize="10sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="KAMIS"
            android:textSize="10sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="JUMAT"
            android:textSize="10sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SABTU"
            android:textSize="10sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MINGGU"
            android:textSize="10sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Tabel Data -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="7">

        <TextView
            android:id="@+id/tv_senin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="12sp"
            android:textColor="#333333"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_selasa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="12sp"
            android:textColor="#333333"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_rabu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="12sp"
            android:textColor="#333333"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_kamis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="12sp"
            android:textColor="#333333"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_jumat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="12sp"
            android:textColor="#333333"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_sabtu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="12sp"
            android:textColor="#333333"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_minggu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="12sp"
            android:textColor="#333333"
            android:gravity="center" />
    </LinearLayout>

    <!-- Data Shift Definition (ditambah di sini) -->
    <TextView
        android:id="@+id/tv_shift_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shift: "
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="#F5F5F5" />



</LinearLayout>