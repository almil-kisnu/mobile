<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ========== APP THEME (MODE GELAP) ========== -->
    <style name="Theme.Dessertcakekinian" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- ðŸŽ¨ WARNA UTAMA -->
        <item name="colorPrimary">@color/primary_dark_mode</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark_mode</item>

        <!-- ðŸŒˆ WARNA SEKUNDER -->
        <item name="colorSecondary">@color/primary_dark_mode</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark_mode</item>

        <!-- ðŸŒš LATAR BELAKANG DAN TEKS -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>


        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="colorPrimary">@color/primary_dark_mode</item>
    </style>
    <!-- ========== TEMA UNTUK BOTTOM SHEET ========== -->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimary">@color/primary_dark_mode</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>


    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>


</resources>
